<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/addCoursePageTitle"
        style="@style/textview_title_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="@dimen/dp100"
        android:paddingStart="@dimen/dp8"
        android:text="录入课程"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp40"
        android:layout_marginEnd="@dimen/dp20"
        android:background="@drawable/ic_program_bar_background"
        android:paddingStart="@dimen/dp6"
        android:paddingEnd="@dimen/dp6"
        app:layout_constraintBottom_toBottomOf="@id/addCoursePageTitle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/addCoursePageTitle">

        <TextView
            android:id="@+id/help"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp5"
            android:layout_marginEnd="@dimen/dp10"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/ic_help"
            android:drawablePadding="@dimen/dp4"
            android:gravity="center"
            android:text="设置"
            android:textColor="@android:color/black" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp15"
            android:layout_marginBottom="@dimen/dp15"
            android:alpha="0.4"
            android:background="@color/gray" />


        <TextView
            android:id="@+id/addNewPlan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginEnd="@dimen/dp5"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/ic_skip"
            android:drawablePadding="@dimen/dp4"
            android:gravity="center"
            android:text="添加时间段"
            android:textColor="@android:color/black" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="@dimen/dp30"
        android:gravity="end"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp40"
        app:layout_constraintLeft_toLeftOf="@id/addCoursePageTitle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addCoursePageTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp5"
            android:layout_marginEnd="@dimen/dp5"
            android:background="@drawable/config_card_background"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp8"
            android:paddingBottom="@dimen/dp8">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/editCourseName"
                style="@style/setting_item_ui">

                <TextView
                    android:id="@+id/textView33"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp8"
                    android:layout_marginTop="@dimen/dp8"
                    android:text="@string/course_name"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/t18"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/courseNameSubTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/courseNameSubTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp8"
                    android:layout_marginBottom="@dimen/dp16"
                    android:text="@string/course_name_subtitle"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/imageView10"
                    app:layout_constraintStart_toStartOf="@+id/textView33"
                    app:layout_constraintTop_toBottomOf="@+id/textView33" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="@dimen/dp20"
                    android:layout_height="@dimen/dp20"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintBottom_toBottomOf="@+id/courseNameSubTitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView33"
                    app:srcCompat="@drawable/course_name_24dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/editCourseColor"
                style="@style/setting_item_ui">

                <TextView
                    android:id="@+id/editCourseColorTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp8"
                    android:layout_marginTop="@dimen/dp8"
                    android:text="课程颜色"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/t18"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/editCourseColorSubtitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/editCourseColorSubtitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp8"
                    android:layout_marginBottom="@dimen/dp16"
                    android:text="选择您喜欢的颜色"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/s2_img"
                    app:layout_constraintStart_toStartOf="@+id/editCourseColorTitle"
                    app:layout_constraintTop_toBottomOf="@+id/editCourseColorTitle" />

                <ImageView
                    android:id="@+id/s2Img"
                    android:layout_width="@dimen/dp20"
                    android:layout_height="@dimen/dp20"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintBottom_toBottomOf="@+id/editCourseColorSubtitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/editCourseColorTitle" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/coursePlanRecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp20" />
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/confirmFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp16"
        android:layout_marginBottom="@dimen/dp16"
        android:backgroundTint="@color/blue"
        android:text="完成添加"
        android:textColor="@android:color/white"
        app:icon="@drawable/ic_check_black_24dp"
        app:iconTint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>