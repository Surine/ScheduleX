<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/fromSuperCn"
    android:background="@drawable/shape_radius_card_4"
    android:transitionName="@string/transition_super"
    android:layout_height="190dp">

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp20"
        android:layout_marginBottom="@dimen/dp20"
        android:lineSpacingExtra="@dimen/dp5"
        android:text="如果超课app里可以获取到您的课程数据，\n建议您直接使用超课导入，方便快捷"
        android:textColor="@android:color/white"
        android:textSize="@dimen/t10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp10"
        android:text="超级课程表导入"
        android:id="@+id/superTitle"
        android:textColor="@android:color/white"
        android:textSize="@dimen/t20"
        app:layout_constraintBottom_toTopOf="@id/textView29"
        app:layout_constraintLeft_toLeftOf="@id/textView29" />

    <ImageView
        android:layout_width="@dimen/dp100"
        android:layout_height="@dimen/dp100"
        android:layout_marginEnd="@dimen/dp20"
        android:src="@mipmap/super_class"
        android:alpha="0.5"
        android:id="@+id/super_logo"
        android:transitionName="@string/transition_super3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:layout_width="@dimen/dp20"
        android:layout_height="@dimen/dp20"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginEnd="@dimen/dp10"
        android:visibility="gone"
        android:src="@drawable/ic_settings_black_24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@android:color/white" />
</androidx.constraintlayout.widget.ConstraintLayout>